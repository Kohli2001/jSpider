<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="myjdbc" class="org.jsp.springdemo.JdbcProperties">

		<constructor-arg index='0' type="java.lang.String"
			value="com.mysql.cj.jdbc.Driver" />
		<constructor-arg name="url"
			value="jdbc:mysql://localhost:3306/myJdbc" />
		<constructor-arg name="user" value="root" />
		<constructor-arg name="password" value="tiger" />

	</bean>

	<!-- Sprig bean intialization using setters -->

	<bean id="yourjdbc" class="org.jsp.springdemo.JdbcProperties">
		<property name="driver" value="com.mysql.cj.jdbc.Driver"></property>
		<property name="url"
			value="jdbc:mysql://localhost:3306/myJdbc"></property>
		<property name="user" value="root"></property>
		<property name="password" value="tiger"></property>

	</bean>

</beans>